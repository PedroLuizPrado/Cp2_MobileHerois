<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- Fundo claro -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="24dp"
        android:background="@drawable/form_background"> <!-- Fundo customizado com bordas arredondadas -->

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp"/>

        <!-- Campo Idade -->
        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Idade"
            android:inputType="number"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp"/>

        <!-- Campo Email -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp"/>

        <!-- Botão de Enviar -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE" <!-- Cor de fundo do botão -->
        android:elevation="4dp" <!-- Sombra no botão -->
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>
